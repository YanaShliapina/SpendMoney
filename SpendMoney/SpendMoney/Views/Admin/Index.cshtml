@model AdminPanelViewModel

<style>
.item-wrapper {
    float:left;    
}

.item {
    display: inline-block;
    max-width: 100px;
    padding-left: 20px;
}
</style>

<div class="container">
    <div class="row">
        <div class="d-flex flex-column">
            <div class="col">
                <div class="text-center">
                    <h4>Панель адміністратора</h4>
                </div>
            </div>

            <div class="col">
                <div class="card">
                    <div class="card-header">
                        Категорії користувачів
                    </div>
                    <div class="card-body">
                        <div class="item-wrapper">
                            @foreach(var cat in Model.CategoryList)
                            {
                                 <div class="item text-center">
                                    <a href="#"><img src="@cat.Image" /></a>
                                    <p>
                                        @cat.Name
                                    </p>
                                </div>   
                            }
                        </div>
                    </div>
                </div>
            </div>

            <div class="col mt-3">
                <div class="card">
                    <div class="card-header">
                        Аналіз
                    </div>
                    <div class="card-body">
                        <p><span>Середнє значення витрат за місяць серед користувачів: <b>@Model.SpendAmount ₴</b> </span></p>
                        <p><span>Середнє значення доходів за місяць серед користувачів: <b>@Model.AddAmount ₴</b> </span></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>